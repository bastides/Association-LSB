{% extends "LSBAppBundle::Admin/index.html.twig" %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block title %} Liste des utilisateurs {% endblock %}

{% block container %}
    <h3>Liste des utilisateurs</h3>

    {% for flash_message in app.session.flashBag.get('info') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}

    <ul class="list-group">
        {% for user in adminList %}
            <li>
                Admin | {{ user.username }} | {{ user.email }} |
                {% if is_granted("ROLE_SUPER_ADMIN") %}
                    <a href="{{ path('lsb_app_user_delete', {'id' : user.id}) }}">Supprimer</a>
                {% endif %}
                <a href="{{ path('lsb_app_user_promote', {'id' : user.id}) }}">Promouvoir</a>
                <a href="{{ path('lsb_app_user_demote', {'id' : user.id}) }}">Rétrograder</a>
            </li>
        {% else %}
            <li>Aucun admin n'a été trouvé.</li>
        {% endfor %}
    </ul>

    <ul class="list-group">
        {% for user in memberList %}
            <li>
                Membre | {{ user.username }} | {{ user.email }} |
                <a href="{{ path('lsb_app_user_delete', {'id' : user.id}) }}">Supprimer</a>
                <a href="{{ path('lsb_app_user_promote', {'id' : user.id}) }}">Promouvoir</a>
                <a href="{{ path('lsb_app_user_demote', {'id' : user.id}) }}">Rétrograder</a>
            </li>
        {% else %}
            <li>Aucun naturaliste n'a été trouvé.</li>
        {% endfor %}
    </ul>

    <ul class="list-group">
        {% for user in userList %}
            <li>
                Utilisateur | {{ user.username }} | {{ user.email }} |
                <a href="{{ path('lsb_app_user_delete', {'id' : user.id}) }}">Supprimer</a>
                <a href="{{ path('lsb_app_user_promote', {'id' : user.id}) }}">Promouvoir</a>
                <a href="{{ path('lsb_app_user_demote', {'id' : user.id}) }}">Rétrograder</a>
            </li>
        {% else %}
            <li>Aucun observateur n'a été trouvé.</li>
        {% endfor %}
    </ul>
{% endblock %}
