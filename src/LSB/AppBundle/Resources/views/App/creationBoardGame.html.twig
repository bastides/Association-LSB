{% extends "LSBAppBundle::layout.html.twig" %}

{% block title %} {{ parent() }} {% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
    <div class="container" id="boardGame-page">

        <div class="return-button">
            <a class="management-game-button" href="{{ path('lsb_app_lobby', {'timestamp': timestamp}) }}">Retour à la liste des parties</a>
        </div>

        <div class="row">
            <div class="text-center col-sm-offset-1 col-sm-10 hr-bottom">
                <h1 class="creation-game-title">CRÉER UNE PARTIE DE JEU DE PLATEAU</h1>
            </div>
        </div>

        <div id="formBG">
            {{ form_start(formBG) }}
            {{ form_errors(formBG) }}
            <div class="col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
                <div class="row form-group">
                    {{ form_label(formBG.name, "Nom de la partie :", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(formBG.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(formBG.name) }}
                </div>
                <div class="row form-group">
                    {{ form_label(formBG.players, "Nombre de joueurs :", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(formBG.players, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(formBG.players) }}
                </div>
                <div class="row">
                    {{ form_widget(formBG.Valider, {'attr': {'class': 'form-button pull-right'}}) }}
                </div>
            </div>
            {{ form_rest(formBG) }}
            {{ form_end(formBG) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %} {{ parent() }} {% endblock %}