{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="container-fluid">
        <div class="return-button">
            <a class="management-game-button" href="{{ path('lsb_app_homepage') }}">Retour Ã  l'accueil</a>
        </div>

        <div class="fos-user-forms col-sm-offset-4 col-sm-4 col-md-offset-5 col-md-2">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="row form-group">
                    <label for="username" class="form-label">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" class="form-input form-control" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="row form-group">
                    <label for="password" class="form-label">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" class="form-input form-control" name="_password" required="required" />
                </div>

                <div class="row form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me" class="form-checkbox">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <input type="submit" id="_submit" class="form-button pull-right" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>
        </div>
    </div>
{% endblock fos_user_content %}

